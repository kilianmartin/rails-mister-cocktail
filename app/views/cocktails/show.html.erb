<div class="cocktail">
  <h1> <%= @cocktail.name %> </h1>



  <% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
      <%= dose.description %>
      of
      <%= dose.ingredient.name %>
      <%= link_to raw('<i class="fa fa-trash"></i>'), dose, method: :delete, remote: true %>
    </li>
  </ul>



  <% end %>
  <%= link_to "<- Back", cocktails_path%>
  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %>
</div>
